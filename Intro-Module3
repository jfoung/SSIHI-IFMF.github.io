        }
        .quiz-question {
            font-weight: bold;
        }
        .quiz-options {
            list-style-type: none;
            padding: 0;
        }
        .quiz-options li {
            margin-bottom: 10px;
        }
        .quiz-options input[type="radio"] {
            margin-right: 10px;
        }
        .submit-btn {
            display: inline-block;
            background-color: #007bff;
